<% include ../partials/boilerplate %>
<div class="workoutgoal-container">
<% workouts.forEach(workout => { %>
  <div class ="workout">
    <span class="date"><%= new Date(workout.date_entry).toDateString() %></span>
    <span class="category"><%= workout.category %></span>
  </div>
  <div class="options">
    <ul>
      <li><a href="/workout/<%= workout.id%>">Detail</a></li>
    </ul>
  </div>
  <% }) %>
</div>
<div class = "add-button">
  <a href="/workout/add">Log a workout</a>
</div>

<% include ../partials/end %>
