<% include ../partials/boilerplate %>

  <div class="workoutgoal-view">
  <h1>Add a Workout</h1>
    <div class="addedit">
      <form action="/workout" method="POST">
        <input type="text" name="category" placeholder="Target Area  /  Workout Type" />
        <input type="text" name="description" placeholder="Description" />
        <input type="number" name="level" placeholder="Difficulty Level" />
        <input type="date" name="date_entry" placeholder="Date" />
        <input type="submit" value="Add workout" />
      </form>
    </div>
    <a href="/workout">Back to workouts</a>
  </div>

<% include ../partials/end %>
